@model CategoryViewModel

<form method="post" asp-action="CreateOrUpdate">
    <input type="hidden" asp-for="Category.ID" />

    <div class="border p-3 mt-4">
        <div class="row pb-3">
            <h2 class="text-primary">@(Model.Category == null || Model.Category.ID == 0 ? "Create Category" : "Update Category")</h2>
            <hr />
        </div>
        <div asp-validation-summary="All"></div>

        <div class="row mb-3">
            <label asp-for="Category.CategoryName"></label>
            <input asp-for="Category.CategoryName" class="form-control" />
            <span asp-validation-for="Category.CategoryName" class="text-danger"></span>
        </div>
        <div class="row mb-3">
            <label asp-for="Category.CategoryDisplayOrder"></label>
            <input asp-for="Category.CategoryDisplayOrder" class="form-control" />
            <span asp-validation-for="Category.CategoryDisplayOrder" class="text-danger"></span>
        </div>

        @if (Model.Category == null || Model.Category.ID == 0)
        {
            <button class="btn btn-primary" type="submit">Create</button>
        }
        else
        {
            <button class="btn btn-primary" type="submit">Update</button>
        }
    </div>

    <a asp-action="Index" asp-controller="Category">Back to Category List</a>
</form>

@section scripts
{
    @{ 
        <partial name="_ValidationScriptsPartial" />
    }
}