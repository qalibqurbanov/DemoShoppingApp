@model CategoryViewModel

@{
    ViewData["Title"] = "Index";
}

<div class="container p-4">
    <div class="row p-3">
        <div class="col-6">
            <h2 class="text-primary">List of Categories</h2>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-primary" asp-action="CreateOrUpdate" asp-controller="Category">
                <i class="bi bi-plus-circle">&nbsp; Create new category</i>
            </a>
        </div>
    </div>
</div>


<table class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th class="text-success">Category Name</th>
            <th class="text-success">Display Order</th>
            <th class="text-success">Operation</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model.Categories)
            {
                <tr>
                    <td>@item.CategoryName</td>
                    <td>@item.CategoryDisplayOrder</td>
                    <td role="group">
                        <a asp-action="CreateOrUpdate" asp-controller="Category" asp-route-id="@item.ID">Edit</a>
                        |
                        <a asp-action="Delete" asp-controller="Category" asp-route-id="@item.ID">Delete</a>
                    </td>
                </tr>
            }
    </tbody>
</table>